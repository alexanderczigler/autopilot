{
  "files": [],
  "references": [
    { "path": "packages/shared" },
    { "path": "apps/airline" },
    { "path": "apps/api" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@autopilot/shared": ["packages/shared/src"],
      "@autopilot/airline": ["apps/airline/src"],
      "@autopilot/api": ["apps/api/src"]
    },
    "types": ["node"]
  }
}
