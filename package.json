{
  "name": "autopilot",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "clean": "turbo run clean && rimraf node_modules .turbo **/dist",
    "postinstall": "turbo run postinstall --filter=...[HEAD]"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "rimraf": "6.0.1",
    "turbo": "2.1.3",
    "typescript": "5.5.4"
  }
}
