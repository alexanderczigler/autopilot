{
  "name": "autopilot",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "clean": "turbo run clean && rimraf node_modules .turbo **/dist",
    "postinstall": "turbo run postinstall --filter='...[HEAD]'",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "24.3.0",
    "@vitest/runner": "3.2.4",
    "@vitest/snapshot": "3.2.4",
    "rimraf": "6.0.1",
    "turbo": "2.5.6",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
